<resources>
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:alertDialogTheme">@style/AppTheme.Dark.Dialog.Info</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Txt_Teste">
        <item name="android:textColor">@color/txt_padrao</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:titleMarginBottom">@dimen/margin_widgets</item>
    </style>

    <style name="Edt_Estilo">
        <item name="android:textColor">@color/txt_padrao</item>
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:titleMarginBottom">@dimen/margin_widgets</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Info" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/bg_alert_info</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Erro" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/bg_alert_erro</item>
    </style>

    <style name="AppTheme.Dark.Dialog.Sucess" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/bg_alert_sucess</item>
    </style>



</resources>
